  <body>


    <!-- incluir codigo parcial de otro archivo -->
    <%- include('./partials/header') %>

    <!-- video inicial -->
    <div class="video-fondo">
      <video id="miVideo" autoplay muted loop width="100%">
        <source src="/public/videos/videoInicial.mp4" type="video/mp4">
        Tu navegador no soporta el video.
      </video>
      <div class="contenido">
        <h1>Cuero que inspira, estilo que perdura</h1>
      </div>
    </div>



    <!-- productos destacados  -->
    <section class="destacados">
  <h2>Colecci√≥n Destacada</h2>

  <div class="destacados-grid">
    <% (destacados || []).forEach(p => { %>
      <a href="/producto/detalleproducto/<%= p.id %>" class="destacado-card">
        <% if (p.mainImg) { %>
          <img src="<%= p.mainImg.image %>" alt="<%= p.nombre %>">
        <% } %>
        <h4><%= p.nombre %></h4>
        <p>$ <%= p.precio %></p>
      </a>
    <% }) %>
  </div>
</section>


    



