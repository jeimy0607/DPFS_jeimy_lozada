<!DOCTYPE html>
<html lang="en">
<head>
  <% include ./partials/head %>
</head>

<body>
 <%- include('./partials/header') %>

<h1>Editar producto</h1>

<form action="/producto/actualizar/<%= producto.id %>" method="post" class="form">
  <label>Nombre</label>
  <input name="nombre" value="<%= producto.nombre %>" required>

  <label>Descripción</label>
  <textarea name="descripcion"><%= producto.descripcion || "" %></textarea>

  <label>Precio</label>
  <input name="precio" type="number" step="0.01" value="<%= producto.precio %>" required>

  <label>Stock</label>
  <input name="stock" type="number" min="0" value="<%= producto.stock %>" required>

  <div class="campo">
  <label>
    <input type="checkbox" name="destacado" value="1">
    Producto destacado
  </label>
</div>

  <label>Categoría</label>
  <select name="categoriaId" required>
    <% categorias.forEach(c => { %>
      <option value="<%= c.id %>" <%= String(c.id) === String(producto.categoriaId) ? "selected" : "" %>>
        <%= c.nombre %>
      </option>
    <% }) %>
  </select>

  <label>
    <input type="checkbox" name="activo" <%= producto.activo ? "checked" : "" %>>
    Activo
  </label>

  <button class="btn" type="submit">Guardar cambios</button>
</form>

<%- include('./partials/footer') %>

</body>
</html>




